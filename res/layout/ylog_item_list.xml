<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:preference="http://schemas.android.com/apk/res/com.sprd.engineermode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/slogui_ab_background_overlay"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/ylog_settings_title"
            android:textColor="@color/black"
            android:textSize="16sp" >
        </TextView>

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/ap_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:title="@string/ap_setting" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/modem_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:title="@string/modem_setting" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/connectivity_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:title="@string/connectivity_setting" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/other_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:title="@string/other_setting" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </LinearLayout>

</ScrollView>