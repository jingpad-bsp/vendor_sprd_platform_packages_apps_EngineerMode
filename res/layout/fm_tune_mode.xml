<?xml version="1.0" encoding="utf-8"?>
<!-- Added by Yuntao.xiao for SlogUI-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tune_rssi_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tune_rssi_th"/>
        <EditText
            android:id="@+id/tune_rssi_th_edit"
            android:labelFor="@id/tune_rssi_th_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tune_snr_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tune_snr_th"/>
        <EditText
            android:id="@+id/tune_snr_th_edit"
            android:labelFor="@id/tune_snr_th_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tune_freq_offset_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tune_freq_offset_th"/>
        <EditText
            android:id="@+id/tune_freq_offset_th_edit"
            android:labelFor="@id/tune_freq_offset_th_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:digits="0123456789abcdefABCDEF"
            android:maxLength="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tune_pilot_power_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tune_pilot_power_th"/>
        <EditText
            android:id="@+id/tune_pilot_power_th_edit"
            android:labelFor="@id/tune_pilot_power_th_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:digits="0123456789abcdefABCDEF"
            android:maxLength="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tune_noise_power_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tune_noise_power_th"/>
        <EditText
            android:id="@+id/tune_noise_power_th_edit"
            android:labelFor="@id/tune_noise_power_th_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:digits="0123456789abcdefABCDEF"
            android:maxLength="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/get_tune_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/get_para"/>
        <Button
            android:id="@+id/set_tune_btn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/set_para"/>
    </LinearLayout>

</LinearLayout>
