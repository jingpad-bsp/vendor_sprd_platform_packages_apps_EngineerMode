<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/serdes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="3dp"
            android:textSize="20dip"
            android:ellipsize="marquee"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:textSize="20dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/mipi_log_serdes_channel" />
        <Spinner
            android:id="@+id/spinner_channel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:textSize="20dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/mipi_log_serdes_freq" />
        <Spinner
            android:id="@+id/spinner_freq"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:entries="@array/mipi_log_serdes_freq"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_ok"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dip"
            android:text="@string/ok"
            android:textSize="18dip"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reslut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="3dp"
            android:textSize="15dip"
            android:ellipsize="marquee"/>
    </LinearLayout>

</LinearLayout>