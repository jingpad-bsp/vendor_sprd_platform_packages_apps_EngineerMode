<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_email_mmc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_sim_type" />

    <Spinner
        android:id="@+id/sp_email_simtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/sim_types" />

    <TextView
        android:id="@+id/tv_email_addrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_email_addrs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_email_addrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:numeric="integer"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_email_addrs_suffix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_email_addrs" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_email_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_email_psw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_email_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:numeric="integer"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>