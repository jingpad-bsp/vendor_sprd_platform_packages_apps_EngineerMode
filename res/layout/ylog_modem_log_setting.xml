<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:preference="http://schemas.android.com/apk/res/com.sprd.engineermode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/slogui_ab_background_overlay"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/ylog_debug_setting_tools"
            android:textColor="@color/black"
            android:textSize="16sp" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="@string/ps_log_level"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RadioGroup
            android:id="@+id/ylog_ps_log_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.sprd.engineermode.debuglog.ylogui.RadioButtonView
                android:id="@+id/ps_log_level_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                preference:summary="@string/ps_log_level_0_summary"
                preference:title="@string/log_level_0" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <com.sprd.engineermode.debuglog.ylogui.RadioButtonView
                android:id="@+id/ps_log_level_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                preference:summary="@string/ps_log_level_1_summary"
                preference:title="@string/log_level_1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <com.sprd.engineermode.debuglog.ylogui.RadioButtonView
                android:id="@+id/ps_log_level_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                preference:summary="@string/ps_log_level_2_summary"
                preference:title="@string/log_level_2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <com.sprd.engineermode.debuglog.ylogui.RadioButtonView
                android:id="@+id/ps_log_level_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                preference:summary="@string/ps_log_level_3_summary"
                preference:title="@string/log_level_3" />

        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/iq_mode_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:title="@string/iq_mode_setting" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/etb_modle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:checkVisibility="visiable"
            preference:summary="@string/etb_modle_tips"
            preference:summaryVisibility="visiable"
            preference:title="@string/etb_modle" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/modem_reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:checkVisibility="visiable"
            preference:summary="@string/modem_reboot_tips"
            preference:summaryVisibility="visiable"
            preference:title="@string/modem_reboot" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/modem_single_log_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:summaryVisibility="visiable"
            preference:title="@string/single_log_size" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/modem_internal_log_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:summaryVisibility="visiable"
            preference:title="@string/internal_log_size" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/modem_external_log_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:summary="@string/internal_log_external_size_tips"
            preference:summaryVisibility="visiable"
            preference:title="@string/external_log_size" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView
            android:id="@+id/modem_log_override"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            preference:checkVisibility="visiable"
            preference:checked="true"
            preference:title="@string/log_override" >
        </com.sprd.engineermode.debuglog.ylogui.SettingPreferenceView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </LinearLayout>

</ScrollView>
